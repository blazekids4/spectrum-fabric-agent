{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/_next/*", "/images/*", "/favicon.ico", "/static/*", "/*.js", "/*.css", "/*.png", "/*.svg", "/*.jpg", "/*.jpeg"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["anonymous"]
    }
  ],
  "platform": {
    "apiRuntime": "node:20"
  },
  "networking": {
    "allowedIpRanges": ["AzureCloud"]
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.microsoft.com; img-src 'self' data: https://*.microsoft.com;"
  }
}